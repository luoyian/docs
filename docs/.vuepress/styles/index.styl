*, *::before, *::after {
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
}

body {
  font-family: 'Noto Sans SC', 'Helvetica Neue', Helvetica, Arial, sans-serif !important;
}

code, kbd, .line-number {
  font-family: 'CaskaydiaCove Nerd Font', Consolas, Menlo, Monaco, 'Courier New', 'Noto Sans SC', 'Helvetica Neue', Helvetica, Arial, monospace, sans-serif !important;
}

.navbar a img {
  transition: all, 0.3s;
}

.navbar a:hover img {
  transform: rotate(180deg);
}

.home .hero img {
  transition: all 0.3s;
}

.home .hero img:hover {
  transform: rotate(180deg);
}
